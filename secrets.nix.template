# Nix Secrets Template
# Copy this file to secrets.nix and fill in your actual secrets
# Store the filled file in 1Password using: task secrets-set
{
  # Git configuration
  git = {
    userName = "Your Name";
    userEmail = "your.email@example.com";
    # GitHub personal access token for API access
    githubToken = "ghp_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx";
  };

  # SSH keys (optional - can be managed separately)
  ssh = {
    privateKey = "";
    publicKey = "";
  };

  # API keys and tokens
  apiKeys = {
    # OpenAI API key for various tools
    openai = "sk-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx";

    # Other API keys as needed
    anthropic = "";
    huggingface = "";
  };

  # Database credentials
  databases = {
    # Example database configuration
    postgres = {
      host = "localhost";
      port = 5432;
      database = "mydb";
      username = "myuser";
      password = "mypassword";
    };
  };

  # Cloud service credentials
  cloud = {
    # AWS credentials
    aws = {
      accessKeyId = "";
      secretAccessKey = "";
      region = "us-east-1";
    };

    # Other cloud providers
    digitalocean = {
      token = "";
    };
  };

  # Personal/private configuration
  personal = {
    # Home address for location-based services
    homeAddress = "123 Main St, City, State, ZIP";

    # Phone numbers
    phoneNumbers = {
      primary = "+1-555-123-4567";
      work = "";
    };

    # Other personal data
    birthday = "YYYY-MM-DD";
  };
}